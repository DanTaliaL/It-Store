@model ItStore.Models.SystemsFolder.RoleEditModel



<div class="intro">
    <div class=" text-white"><h4>Edit role</h4></div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="EditRole" method="post" class="text-white">

        <input type="hidden" name="roleName" value="@Model.Role.Name" />
        <input type="hidden" name="roleId" value="@Model.Role.Id" />
        <h6 class="text-white">Add to @Model.Role.Name</h6>

        <table class="table table-bordered">

            @if (Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">All Users Are Members</td></tr>
            }
            else
            {
                @foreach (var user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                        </td>
                    </tr>
                }
            }

        </table>

        <h6 class="text-white">Remove from @Model.Role.Name</h6>
        <table>
            @if (Model.Members.Count() == 0)
            {


                <tr><td colspan="2">No Users Are Members</td></tr>
            }
            else
            {
                @foreach (var user in Model.Members)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
        <button type="submit" class="btn ">Save</button>
        <a asp-action="AdminPage" class="btn">Cancel</a>
    </form>

</div>
