@{
    ViewData["Title"] = "Home Page";
}

<div class="d-none d-lg-block">
    <div class="intro">
        <div class="elipse__right"></div>
        <div class="banner">
            <div class="row justify-content-lg-start">
                <div class="col-4">
                    <h1>MSI Alpha 15</h1>
                    <p>Оформите заказ на MSI Alpha 15 и получите скидочный купон на весь ассортимент</p>
                    <form method="post">
                        <button asp-area="" asp-controller="Home" asp-action="Privacy">Подробнее</button>
                    </form>
                </div>
                <div class="col">
                    <img src="~/Images/MainPages/Firstblock/Desk1.png" />
                </div>
            </div>
        </div>
        <div class="align-self-center">
            <div class="col">
                <h6>
                    Процессор до AMD Ryzen™ 7 4800H  <br />
                    Графика до AMD Radeon™ RX 5600M 6GB GDDR6 <br />
                    5.6" Full HD (1920x1080)
                </h6>
            </div>
        </div>
        <div class="align-self-end banner__link">
            <div col="col">
                <a asp-controller="Catalog" asp-action="Catalog">Все товары <img  src="~/Images/Icons/VectorLink.png" /></a>
            </div>
        </div>
    </div>
</div>


