@model IEnumerable<ItStore.Models.DataFolder.Picture>

@{
    ViewBag.Title = "Index";
}

<div class="intro text-white">

    <h2>Мои изображения</h2>

    <table>
        <tr>
            <th>Название</th>
            <th>Картинка</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                        + Convert.ToBase64String(item.Image) + "\" />")
                </td>
            </tr>
        }

    </table>
    <a class="btn" asp-action="Create" asp-controller="Picture">Добавить изображение</a>
</div>