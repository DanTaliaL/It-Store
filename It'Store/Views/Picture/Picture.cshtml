<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Таблица товара
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Наименование продукта</th>
                    <th>Изображение</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var q in Model)
                    {
                        <tr>
                            <td>@q.Name</td>
                            <td>
                                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                                                + Convert.ToBase64String(q.Image) + "\" />")
                            </td>
                            <td>
                                <a asp-action="PictureDelete" asp-route-id="@q.Id" class="btn btn-primary"> Удалить </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <a class="btn btn-primary text-center" asp-action="Create" asp-controller="Picture">Добавить изображение</a>
    </div>
</div>