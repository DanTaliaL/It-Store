@{
    Layout = "_Layout";
}

@model AppUser


<div class=" product__min__cart__profile profile row">
    <div asp-validation-summary="All"></div>
    <form asp-action="ProfileUpdate" method="post">
        <div class="col">
            <div class=" mx-1 text-white">
                <table class="table">
                    <tr>
                        <th>
                            <b>Контакты</b>
                        </th>
                        <th>

                        </th>
                    </tr>
                    <tr>
                        <td>
                            <b>Фамиллия:</b>
                        </td>
                        <td>
                            <input class="form-control" asp-for="LastName" placeholder="Фамилия" />
                        </td>

                    </tr>
                    <tr class="tr__style">
                        <td><b>Имя:</b></td>
                        <td> <input class="form-control" asp-for="FirstName" placeholder="Имя" /></td>
                    </tr>

                    <tr class="tr__style">
                        <td><b>Отчество:</b></td>
                        <td><input class="form-control" asp-for="FatherName" placeholder="Отчество" /> </td>
                    </tr>

                    <tr class="tr__style">
                        <td>
                            <b>Телефон:</b>
                        </td>
                        <td>
                            <input class="form-control" asp-for="PhoneNumber" placeholder="Номер телефона" />

                        </td>
                    </tr>

                    <tr class="tr__style">
                        <td>
                            <b>E-mail:</b>
                        </td>
                        <td>
                            <input class="form-control" asp-for="Email" placeholder="Email" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col">
            <div class=" mx-1 text-white">
                <table class="table">
                    <tr>
                        <th>
                            <b>Адресс доставки</b>
                        </th>
                        <th>

                        </th>
                    </tr>
                    <tr>
                        <td>
                            <b>Город:</b>
                        </td>
                        <td>
                            <input class="form-control" asp-for="City" placeholder="Город" />
                        </td>
                    </tr>
                    <tr class="tr__style">
                        <td>
                            <b>Улица:</b>
                        </td>
                        <td>
                            <input class="form-control" asp-for="Street" placeholder="Улица" />
                        </td>
                    </tr>
                    <tr class="tr__style">
                        <td>
                            <b>Дом:</b>
                        </td>
                        <td>
                            <input class="form-control" asp-for="House" placeholder="Номер дома /Подъезда" />
                        </td>
                    </tr>

                    <tr class="tr__style">
                        <td>
                            <b>Номер квартиры:</b>
                        </td>
                        <td>
                            <input class="form-control" asp-for="Flat" placeholder="Номер квартиры /Дома" />
                        </td>
                    </tr>

                </table>

            </div>
        </div>


        <input type="hidden" name="ProfileName" value="@User.Identity.Name" />
        @if (User.IsInRole("Admin"))
        {
            <input type="hidden" name="ProfileRole" value="Admin" />
        }
        else
        {
            <input type="hidden" name="ProfileRole" value="User" />
        }


    <div class="text-center mb-4">
        <a class="btn" asp-action="Profile">Назад</a>
        <button class="btn" type="submit">Сохранить</button>
    </div>

    </form>



</div>