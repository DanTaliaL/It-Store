@model Product
    <div class="card-body m-1 p-1 ">
        <div class="bd-faded p-1">
            <h4>
                @Model.Name
                <span class="badge dadge-pill badge-primary" style="float:right">
                    <small>@Model.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">@Model.Model</div>
        <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn" style="float:right">Добвавить в корзину</button>
        </form>
    </div>

