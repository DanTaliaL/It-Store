@model Product

<h3>@Model.Name</h3>
<div class="row">
    <p class="col">@Model.Price</p>

    <form class="col" id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn__cart">Купить</button>
    </form>
</div>