@model Product

    <div class=" text__cart mt-2">     
            <h3 class="text-center"><b> @Model.Name @Model.Model </b></h3>
            
            <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span> <b>Стоимость: </b> @Model.Price</span>
                <button type="submit" style="float:right;" class="btn__link__cart"><img src="~/Images/Icons/cart-plus.png" /></button>
            </form>     
    </div>