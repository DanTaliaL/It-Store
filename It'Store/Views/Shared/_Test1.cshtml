@model ItStore.Models.SystemsFolder.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IT'Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200&family=Open+Sans:wght@300&family=Raleway:wght@200&display=swap" rel="stylesheet">
</head>
<body class="container">


    <div class="b-example-divider"></div>

    <header>
        <div class="px-3 py-2 bg-dark text-white">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
                        <img src="~/Images/Icons/Logo.png">
                    </a>
                    

                    <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                        <li>
                            <a asp-area="" asp-controller="Catalog" asp-action="Catalog" class="nav-link text-white">
                               Каталог
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white">
                                Гарантия и возврат
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white">
                                Успей купить
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white">
                                Контакты
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="px-3 py-2 border-bottom mb-3">
            <div class="container d-flex flex-wrap justify-content-center">
                <form class="col-12 col-lg-auto mb-2 mb-lg-0 me-lg-auto">
                    <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                </form>

                <div class="text-end">
                    <a class="nav__link" asp-area="" asp-controller="Cart" asp-action="Cart"><img src="~/Images/Icons/Basket.png" /></a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <a type="" class="nav__link" asp-area="" asp-controller="Account" asp-action="AdminProfile"><img src="~/Images/Icons/User.png" /></a>
                        }
                        else
                        {
                            <a type="" class="nav__link" asp-area="" asp-controller="Account" asp-action="Profile"><img src="~/Images/Icons/User.png" /></a>
                        }

                    }
                    else
                    {


                        <button type="button" class="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <img src="~/Images/Icons/User.png" />
                        </button>

                        //Modal
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                        <button type="button" class="btn-primary" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form asp-controller="Account" asp-action="login" method="post">
                                        <div class="modal-body">

                                            <div asp-validation-summary="All"></div>
                                            <p>
                                                <label>Логин</label>
                                                <input class="form-control" name="Login" />
                                            </p>
                                            <p>
                                                <label>Пароль</label>
                                                <input class="form-control" name="Password" />
                                            </p>

                                        </div>
                                        <div class="modal-footer text-black">
                                            <button type="button" class="btn" data-bs-dismiss="modal">Close</button>
                                            <button class="modal__button">Войти</button>
                                            <button class="modal__button" type="submit" asp-controller="Account" asp-action="UserCreate">Регестрация</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>



                        @*<a class="nav__link" asp-area="" asp-controller="Account" asp-action="Login"><img src="~/Images/Icons/User.png" /></a>*@
                    }
                </div>
            </div>
        </div>
    </header>












    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
