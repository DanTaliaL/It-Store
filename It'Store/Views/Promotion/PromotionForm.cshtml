@{ 
    Layout = "_AdminLayout";
}
@model Promotion
<div class="container text-center">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Добавление
    </div>

    <div class="card-body">
        <form class="text-black" asp-validation-summary="All" asp-action="Promotion" method="post">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Наименование промокода</th>
                        <th>Процент скидки</th>
                        <th>Окончание акции</th>
                        <th>Описание промокода</th>
                        <th>Публичный статус</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input class="form-control" asp-for="Name" />
                        </td>

                        <td>
                            <input class="form-control" asp-for="Percentage" />
                        </td>

                        <td>
                            <input class="form-control" type="date" asp-for="ClosedDate" />
                        </td>

                        <td>
                            <input class="form-control" asp-for="Description" />
                        </td>
                        <td>
                            <select class="form-control" asp-for="PublicStatus">
                                <option value="true" >Включен</option>
                                <option value="false">Выключен</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
            <a class="btn btn-primary col" asp-action="Promotion"> Назад </a>
            <button class="btn btn-primary col" type="submit">Заполнить</button>
        </form>
    </div>
</div>