@{
    Layout = "_AdminLayout";
}

@model ItStore.Models.DataFolder.ProductQuantityViewModel


<div class="container text-center">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Добавление
    </div>

    <div class="card-body">
        <form class="text-black" asp-validation-summary="All" asp-action="ProductQuantity" method="post">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Количество</th>
                        <th>Наименование продукта</th>
                        <th>Наименование склада</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input class="form-control" asp-for="@Model.ProductQuantity.Quantity" />
                        </td>
                        <td> 
                        <select class="form-control" asp-for="@Model.ProductQuantity.ProductId" >
                            @foreach (var q in Model.Products)
                            {
                                <option value="@q.Id" > @q.Name  @q.Model</option>
                            }
                        </select>
                        </td>
                        <td>
                        <select class="form-control" asp-for="@Model.ProductQuantity.WareHouseId">
                            @foreach (var q in Model.WareHouse)
                            {
                                <option value="@q.Id"> Наименование: @q.Name  Улица: @q.Adress</option>
                            }
                        </select>
                        </td>

                    </tr>
                </tbody>
            </table>
            <a class="btn btn-primary col" asp-action="ProductQuantity"> Назад </a>
            <button class="btn btn-primary col" type="submit">Заполнить</button>
        </form>
    </div>
</div>